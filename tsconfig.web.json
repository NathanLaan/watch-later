{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "outDir": "./out",
    "types": ["svelte"]
  },
  "include": [
    "src/renderer/src/**/*",
    "src/preload/*.d.ts"
  ]
}
